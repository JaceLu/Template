    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>@Param.Default.SiteName</title>
    <link rel="shortcut icon" href="@Param.Default.Icon" type="image/x-icon" />
    <link href="~/Content/manage.min.css" rel="stylesheet" />
    <script src="~/Scripts/Base/jquery.min.js"></script>
