    <script>
        validationEngine.SetConfig({ error: "zqui-has_error" });

        MsgBox.SetConfig({
            alertPrefix: "zqui-alert_",
            container: '<div class="zqui-alert">\<div class="zqui-alert__hd"><i class="icon icon-exclamation-circle"></i></div>\<div class="zqui-alert__bd">\<p></p>\ </div>\</div>',
            dismiss: '<div class="zqui-alert__ft">\<a class="zqui-close" data-dismiss="alert" aria-hidden="true"></a>\</div>'
        });

        $(function () {
            $("#userLogin").InitLogin("admin", "/admin/index");
        });

    </script>
    <style>

        .zqui-login .zqui-login__content {
            padding: 1.5rem;
            background: rgba(255, 255, 255, 0.6);
        }

        .zqui-btn_primary {
            color: #fff;
            background-color: #237ae4;
            border-color: #237ae4;
        }

            .zqui-btn_primary:hover {
                color: #fff;
                background-color: #006aeb;
                border-color: #006aeb;
            }

        .zqui-login-bg {
            background-image: url(../Content/images/login.jpg);
        }

        .zqui-login .zqui-login__logo {
            margin: 10rem auto 1rem auto;
            color: #fff;
        }
        .zqui-login .zqui-login__title {
            text-align:center;
        }
        .zqui-form-group {
            margin-bottom: 1rem;
        }
        .zqui-login__form .zqui-form-group .zqui-form__input-icon > .icon{
            top:0;
        }
        .zqui-login__form .zqui-form-group .zqui-form__input-icon .zqui-form__input{
            height:2rem;
        }
    </style>
</head>
