<body class="zqui-login-bg">
    <div class="zqui-login" style="padding-left: 40px; margin-top: -80px;">
        <div class="zqui-login__logo">
            <b style="font-size:2rem">@Param.Default.SiteName</b>
        </div>
        <div class="zqui-login__content" id="userLogin">
            <div class="zqui-login__title">欢迎登录后台系统</div>
            <div class="zqui-login__form">
                <div class="zqui-form-group">
                    <div class="zqui-form__label">用户名</div>
                    <div class="zqui-form__input-icon">
                        <i class="icon icon-phone"></i>
                        <input class="zqui-form__input validate[required]" type="text" autocomplete="off" placeholder="登录账号" id="LoginId" />
                    </div>
                </div>
                <div class="zqui-form-group">
                    <div class="zqui-form__label">密码</div>
                    <div class="zqui-form__input-icon">
                        <i class="icon icon-lock"></i>
                        <input class="zqui-form__input" type="password" autocomplete="off" placeholder="密码" id="Password" />
                    </div>
                </div>
            </div>
            <div class="zqui-login__actions">
                <label>
                    <span class="zqui-checkbox">
                        <input type="checkbox" id="ckRemember" class="" data-valuetype="bool" />
                        <span class="zqui-checkbox__inner"></span>
                    </span>
                    <span>记住账号</span>

                </label>
            </div>

            <button id="btnLogin" class="zqui-btn zqui-btn_block zqui-btn_primary">
                登录
            </button>

        </div>
    </div>
</body>
</html>
